# Equity by Design - Environment Variables
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ============================================================================
# SANITY CMS CONFIGURATION
# ============================================================================

# Get these from: https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production

# API Tokens (Settings → API → Tokens)
# Read token (safe to expose): Viewer role
NEXT_PUBLIC_SANITY_API_TOKEN=sk_read_token_here

# Write token (KEEP SECRET): Editor role
# Only use in server-side code
SANITY_API_WRITE_TOKEN=sk_write_token_here

# Preview secret for draft content
# Generate a random string: openssl rand -base64 32
SANITY_PREVIEW_SECRET=your_random_secret_here

# Webhook secret for auto-revalidation
SANITY_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================================
# NEXT.JS CONFIGURATION
# ============================================================================

# Your production website URL
NEXT_PUBLIC_SITE_URL=https://equitybydesign.com

# Next.js API URL (usually same as SITE_URL)
NEXT_PUBLIC_API_URL=https://equitybydesign.com/api

# Environment
NODE_ENV=production  # or 'development'

# ============================================================================
# EMAIL SERVICE (Resend)
# ============================================================================

# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxx_your_key_here

# Email addresses
# Where contact form submissions are sent
INTERNAL_NOTIFICATION_EMAIL=team@equitybydesign.com

# Reply-to address for automated emails
REPLY_TO_EMAIL=hello@equitybydesign.com

# From address (must be verified domain in Resend)
FROM_EMAIL=hello@equitybydesign.com

# ============================================================================
# NEWSLETTER / EMAIL MARKETING
# ============================================================================

# ConvertKit (or your email marketing platform)
# Get from: https://app.convertkit.com/account/edit
CONVERTKIT_API_KEY=your_convertkit_key
CONVERTKIT_API_SECRET=your_convertkit_secret
CONVERTKIT_FORM_ID=your_form_id

# Alternative: Mailchimp
# MAILCHIMP_API_KEY=your_mailchimp_key
# MAILCHIMP_AUDIENCE_ID=your_audience_id
# MAILCHIMP_SERVER_PREFIX=us1

# Newsletter confirmation secret
# Generate: openssl rand -base64 32
NEWSLETTER_CONFIRMATION_SECRET=your_confirmation_secret

# ============================================================================
# RATE LIMITING & CACHING (Optional but recommended)
# ============================================================================

# Upstash Redis (for rate limiting contact form)
# Get from: https://console.upstash.com
# UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token

# Vercel KV (alternative to Upstash)
# KV_REST_API_URL=your_kv_url
# KV_REST_API_TOKEN=your_kv_token

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Plausible Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=equitybydesign.com

# Fathom Analytics
# NEXT_PUBLIC_FATHOM_SITE_ID=your_site_id

# Google Analytics (if using)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (error tracking)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Google reCAPTCHA (spam protection for forms)
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key
# RECAPTCHA_SECRET_KEY=your_secret_key

# Calendly (for booking meetings)
# NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-username

# Cloudinary (alternative image hosting)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# HubSpot CRM (for contact management)
# HUBSPOT_API_KEY=your_hubspot_key
# HUBSPOT_PORTAL_ID=your_portal_id

# Slack (for notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Enable debug logging
# DEBUG=true

# Disable telemetry
# NEXT_TELEMETRY_DISABLED=1

# Studio development port
# SANITY_STUDIO_PORT=3333

# ============================================================================
# TESTING
# ============================================================================

# Test mode flags
# TEST_MODE=false
# SKIP_EMAIL_SEND=false

# ============================================================================
# NOTES
# ============================================================================
#
# Required variables (must be set):
# - NEXT_PUBLIC_SANITY_PROJECT_ID
# - NEXT_PUBLIC_SANITY_DATASET
# - SANITY_API_WRITE_TOKEN
# - RESEND_API_KEY
# - NEXT_PUBLIC_SITE_URL
#
# Optional but recommended:
# - SANITY_PREVIEW_SECRET (for preview mode)
# - INTERNAL_NOTIFICATION_EMAIL (for contact forms)
# - CONVERTKIT_API_KEY (for newsletter)
#
# How to use:
# 1. Copy this file to .env.local
# 2. Fill in your actual values
# 3. Never commit .env.local to Git
# 4. For production, set these in Vercel/Netlify dashboard
#
# Generate random secrets:
# openssl rand -base64 32
#
# Verify configuration:
# npm run env:check
#
